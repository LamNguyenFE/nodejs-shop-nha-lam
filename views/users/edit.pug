extends ../layouts/common.pug
block content
    h1 Users Edit

    if errors
        each error in errors
            .alert.alert-danger= error
    if messages
        each message in messages
            .alert.alert-info= message

    form(action="/users/edit/"+userEdit.id, method="POST", enctype="multipart/form-data")
        form-group
            label(for="name") Name
            input.form-control(type="text", name = "name", value=values? values.name :userEdit.name )
            small.form-text.text-muted Type your name
        form-group
            label(for="email") Email
            input.form-control(type="email", name = "email", value=values? values.email :userEdit.email )
            small.form-text.text-muted Type your email
        form-group
            label(for="password") password
            input.form-control(type="password", name = "password", value=values? values.password :userEdit.password )
            small.form-text.text-muted Type your password
        form-group
            label(for="phone") Phone
            input.form-control(type="text", name = "phone", value=values? values.phone :userEdit.phone )   
            small.form-text.text-muted Something
        form-group
            label(for="avatar") Avatar
            input.form-control(type="file", name = "avatar", value=values? values.avatar :'')   
            small.form-text.text-muted Choose you avatar
            img.img-fluid(src= userEdit.avatar&&('/' + userEdit.avatar))
        p
        form-group       
            button.btn.btn-primary(type="submit") Edit
